<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/notification_gradient"
           >

           <TextView
               android:id="@+id/notif_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="10dp"
               android:padding="4dp"
               android:text="Notification Header"
               android:textColor="@color/colorPrimaryDark"/>

           <TextView
               android:id="@+id/notif_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="10sp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_alignTop="@id/notif_title"
               android:padding="4dp"
               android:text="Notification Time"
               android:layout_toEndOf="@id/notif_title"
               android:textColor="@color/colorPrimaryDark"/>

           <TextView
               android:id="@+id/notif_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="2dp"
               android:layout_marginBottom="5dp"
               android:padding="4dp"
               android:text="Notification Text"
               android:textColor="@color/colorPrimary"
               android:layout_below="@id/notif_title"/>

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>